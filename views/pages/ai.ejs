<% include ../partials/header %>

<div class="row">
    <div class="col-xs-12">
        <h1>Single AI Information</h1>
        <p><a href="/ais" class="btn btn-default">&laquo; Back to all</a></p>
    </div>
    <div class="col-md-4">
        <h2>Details</h2>
        <table class="table">
            <tr>
                <th>ID</th>
                <td><%= ai.id %></td>
            </tr>
            <tr>
                <th>Name</th>
                <td><%= ai.name %></td>
            </tr>
        </table>
    </div>
    <div class="col-md-4">
        <h2>Games</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Status</th>
                    <th>Opponent</th>
                    <th>Winner/gaveup</th>
                </tr>
            </thead>
            <% games.forEach((game) => {
                var opponent = game.ai_a == ai.id ? game.ai_b : game.ai_a %>
                <tr>
                    <td><%= game.id %></td>
                    <td><%= ["waiting", "in progress", "over"][game.status-1] %></td>
                    <td><%= opponent %></td>
                    <td><%= game.winner ? game.winner : game.gaveup %></td>
                </tr>
            <% }) %>
        </table>
    </div>
</div>

<% include ../partials/footer %>
